{
    "name": "marco-introini/certinfo-cli",
    "description": "SSL Certificate check in the command line.",
    "keywords": ["ssl", "certificates", "laravel", "laravel zero", "console", "cli"],
    "homepage": "https://mintdev.me",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/marco-introini/certinfo-cli/issues",
        "source": "https://github.com/marco-introini/certinfo-cli"
    },
    "authors": [
        {
            "name": "Marco Introini",
            "email": "marco@mintdev.me"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/http": "^11.0",
        "nunomaduro/termwind": "^2.0",
        "spatie/ssl-certificate": "^2.4"
    },
    "require-dev": {
        "laravel-zero/framework": "^11",
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.4.4",
        "pestphp/pest": "^3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["builds/certinfo"]
}
